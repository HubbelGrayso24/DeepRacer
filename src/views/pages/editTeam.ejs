<%- include ('../partials/header') %>

<div class="container">
    <div class="container">
        <h1><b>Edit Team</b></h1>
    </div>

    <div class="container mt-3">
        <form action="/teams/<%= team.team_id %>" method="POST">
            <div class="form-group">
                <label for="teamName">Team Name</label>
                <input type="text" class="form-control" id="teamName" name="teamName" value="<%= team.team_name %>" required>
            </div>
            <div class="form-group">
                <label for="student1">Student 1</label>
                <input type="text" class="form-control" id="student1" name="student1" value="<%= team.student1 %>" required>
            </div>
            <div class="form-group">
                <label for="student2">Student 2</label>
                <input type="text" class="form-control" id="student2" name="student2" value="<%= team.student2 %>">
            </div>
            <div class="form-group">
                <label for="student3">Student 3</label>
                <input type="text" class="form-control" id="student3" name="student3" value="<%= team.student3 %>">
            </div>
            <div class="form-group">
                <label for="carnumber">Car Number</label>
                <input type="text" class="form-control" id="carnumber" name="student3" value="<%= team.car_number %>">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</div>

<%- include ('../partials/footer') %>